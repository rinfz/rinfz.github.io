---
export interface Props {
    title: string;
}

const { title } = Astro.props as Props;

const c_navBtn =
    "block w-full text-center md:text-left bg-orange-600 px-1 py-2 hover:bg-orange-500";
---

<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width,initial-scale=1" />
        <meta
            name="description"
            content="Personal website of Matt R: programming, music, tech, bird watching and other interests"
        />
        <link rel="icon" type="image/x-icon" href="/images/favicon.png" />
        <title>{title}</title>
    </head>

    <body>
        <div class="max-w-5xl min-h-screen w-full px-5 pb-0 sm:pb-5">
            <header
                class="bg-gradient-to-t from-gray-900 to-gray-8 00 text-center py-10 border border-gray-700 text-white mb-2.5 mt-2.5 text-sm font-semibold"
            >
                <h1><a href="/">A Delightful Abstraction</a></h1>
            </header>

            <main class="flex flex-col md:flex-row gap-x-4">
                <nav class="w-full md:w-1/5 mb-2">
                    <ul id="nav-items" class="hidden md:block space-y-1 mb-3">
                        <li><a class={c_navBtn} href="/">Home</a></li>
                        <li><a class={c_navBtn} href="/posts">Posts</a></li>
                        <li><a class={c_navBtn} href="/birds">Bird List</a></li>
                        <li>
                            <a class={c_navBtn} href="/photos">Photography</a>
                        </li>
                        <li>
                            <a
                                class={c_navBtn}
                                href="https://larusreader.com/"
                                target="_blank">Online Reading App</a
                            >
                        </li>
                        <li>
                            <a
                                class={c_navBtn}
                                href="https://www.goodreads.com/review/list/164595825-matt-r?order=d&shelf=read&sort=date_updated"
                                target="_blank"
                            >
                                My Goodreads
                            </a>
                        </li>
                    </ul>

                    <div
                        class="flex md:block justify-between md:justify-items-start items-center md:items-start"
                    >
                        <p class="text-xs">
                            <a
                                href="https://creativecommons.org/licenses/by-sa/4.0/"
                                target="_blank">&copy; CC BY-SA 4.0</a
                            >
                        </p>
                        <button
                            class="block md:hidden"
                            id="toggle-btn"
                        >
                            <svg
                                xmlns="http://www.w3.org/2000/svg"
                                fill="none"
                                viewBox="0 0 24 24"
                                stroke-width="1.5"
                                stroke="currentColor"
                                class="w-6 h-6"
                            >
                                <path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5"
                                ></path>
                            </svg>
                        </button>
                    </div>
                </nav>

                <div class="flex-1">
                    <slot />
                </div>
            </main>
        </div>

        <script type="text/javascript">
            const button = document.getElementById("toggle-btn");
            const navItems = document.getElementById("nav-items");

            button.addEventListener('click', () => {
                navItems.classList.toggle('hidden');
                if (navItems.classList.contains('hidden')) {
                    button.innerHTML =
                        '<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6"><path stroke-linecap="round" stroke-linejoin="round" d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5"></path></svg>';
                } else {
                    button.innerHTML =
                        '<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6"><path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" /></svg>';
                }
            });
        </script>
    </body>
</html>

<style>
    body {
        @apply text-white;
        background-color: #000000;
        font-family: Optima, Candara, 'Noto Sans', source-sans-pro, sans-serif;
    }
</style>
